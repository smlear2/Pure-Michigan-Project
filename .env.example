# ===========================================
# Environment Variables — Golf Tournament Platform
# Copy this to .env and fill in your values
# NEVER commit .env to git
# ===========================================

# Supabase Database
# DATABASE_URL = pooled connection (port 6543) — used at runtime
# DIRECT_URL = direct connection (port 5432) — used for migrations
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_ID:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.YOUR_PROJECT_ID:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:5432/postgres"

# Supabase Auth & API
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_ID.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# Golf Course API (for course search)
GOLFCOURSE_API_KEY="your-golfcourseapi-key-here"
